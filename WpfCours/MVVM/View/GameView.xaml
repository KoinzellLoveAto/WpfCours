<UserControl x:Class="WpfCours.MVVM.View.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCours.MVVM.View"
             xmlns:VM="clr-namespace:WpfCours.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=VM:MainViewVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="Aqua">
            <StackPanel VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Minecraft" FontSize="60" FontFamily="Comic sans ms"></TextBlock>
                <Button Command="{Binding RequestChangeViewCommand}"  Content="Play ! " Width="100" Margin="50" FontSize="30"></Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
